{% extends 'base.html.twig' %}

{% block title %}Campus{% endblock %}

{% block body %}
    <h1>Gérer les campus</h1>
    <div>
        <p>
            Filtrer les sites
        </p>
        <div>
            <label for="site-search">Le nom contient : </label>
            <input type="search" id="site-search" name="q">
            <button>Rechercher</button>
        </div>
    </div>
    <a href="{{ path('campus_new') }}">Ajouter</a>
    <table class="table">
        <thead>
            <tr>
                <th>CAMPUS</th>
                <th>ACTIONS</th>
            </tr>
        </thead>
        <tbody>
        {% for campus in campuses %}
            <tr>
                <td>{{ campus.nom }}</td>
                <td>
                    <a href="{{ path('campus_edit', {'id': campus.id}) }}" class="btn btn-outline-info">Modifier -</a>
                    <a href="{{ path('campus_delete', {'id': campus.id}) }}" class="btn btn-outline-danger">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun campus trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('campus_new') }}" class="btn btn-outline-info">Ajouter</a>
{% endblock %}
