{% extends 'base.html.twig' %}

{% block body %}

    <ul>
        <li>Prénom : {{ participant.prenom }}</li>
        <li>Nom : {{ participant.nom }}</li>
        <li>Pseudo : {{ participant.pseudo }}</li>
        <li>Téléphone : {{ participant.telephone }}</li>
        <li>Email : {{ participant.email }}</li>
        <li>Campus : {{ participant.campus.nom }}</li>
    </ul>
    {% if app.user.id == participant.id %}
        <a href="{{ path('participant_update', {'id': app.user.id}) }}">Modifier profil</a>
        <a href="{{ path('participant_modifierMDP', {'id': app.user.id}) }}">Modifier Mot de passe</a>
    {% endif %}
    <a href="{{ path('accueil') }}">Retour</a>
{% endblock %}

