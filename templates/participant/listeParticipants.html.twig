{% extends 'base.html.twig' %}

{% block title %}Liste Participants{% endblock %}

{% block body %}
    <header>
        <div>
            <p>Date du jour : {{ "now" | date('d/m/Y') }}</p>
            <p>Participant : {{ app.user.prenom }}  {{ app.user.nom | slice(0,1)~"." }}</p>
        </div>
    </header>
    <main>
        <a href="{{ path('app_register') }}">Créer un participant</a><br>
        <table>
            <thead>
            <th>
                <tr>Nom</tr>
                <tr>Prénom</tr>
                <tr>Pseudo</tr>
                <tr>Email</tr>
                <tr>Téléphone</tr>
                <tr>Campus</tr>
                <tr>Administrateur</tr>
                <tr>Actif</tr>
                <tr>Actions</tr>
            </th>
            </thead>
            <tbody>

                {% for participant in listeParticipants %}
                <tr>
                    <td><a href="{{ path('participant_afficherProfil', {id: participant.id}) }}">{{ participant.nom }}</a></td>
                    <td>{{ participant.prenom }}</td>
                    <td>{{ participant.pseudo }}</td>
                    <td>{{ participant.email }}</td>
                    <td>{{ participant.telephone }}</td>
                    <td>{{ participant.campus.nom }}</td>
                    <td>{{ participant.administrateur }}</td>
                    <td>{{ participant.actif }}</td>

                    <td>
                        <a href="#">Désactiver</a>
                        <a href="{{ path('participant_delete', {'id': participant.id}) }}">Supprimer</a>
                    </td>
                </tr>
                {% endfor %}

            </tbody>
        </table>

        <a href="{{ path('app_register') }}">Créer un participant</a><br>
    </main>


{% endblock %}