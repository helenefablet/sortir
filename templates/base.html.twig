<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css" integrity="sha512-YWzhKL2whUzgiheMoBFwW8CKV4qpHQAEuvilg9FAn5VJUDwKZZxkJNuGM4XkWuk94WCrrwslk8yWNGmY1EduTA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    </head>
    <body>
        <header>
            {% if app.user %}
                <div class="mb-3">
                    {% if is_granted("ROLE_ORGANISATEUR") %}
                        <a href="#">Gérer une sortie</a>
                    {% endif %}

                    {% if is_granted("ROLE_ADMIN") %}
                        <a href="{{ path('app_register') }}">Gérer les utilisateurs</a>
                        <a href="{{ path('ville_index') }}">Gérer les villes</a>
                        <a href="{{ path('campus_index') }}">Gérer les campus</a>
                    {% endif %}

                    <a href="{{ path('accueil') }}">Accueil</a>
                    <a href="{{ path('participant_afficherProfil', {'id': app.user.id}) }}">Mon profil</a>
                    <a href="{{ path('app_logout') }}">Se déconnecter</a>
                </div>
            {% endif %}
        </header>
        {% block body %}
        {% endblock %}
    </body>
</html>
