<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        <header>
            {% if app.user %}
                <div class="mb-3">
                    {% if is_granted("ROLE_ORGANISATEUR") %}
                        <a href="#">Gérer une sortie</a>
                    {% endif %}

                    {% if is_granted("ROLE_ADMIN") %}
                        <a href="#">Gérer les utilisateurs</a>
                        <a href="#">Gérer les villes</a>
                        <a href="#">Gérer les campus</a>
                    {% endif %}

                    <a href="{{ path('accueil') }}">Accueil</a>
                    <a href="{{ path('participant_afficherProfil', {'id': app.user.id}) }}">Mon profil</a>
                    <a href="{{ path('app_logout') }}">Se déconnecter</a>
                </div>
            {% endif %}
        </header>
        {% block body %}
        {% endblock %}
    </body>
</html>
