{% extends 'base.html.twig' %}

{% block title %}Lieux{% endblock %}

{% block body %}
    <h1>Lieux</h1>

    <a href="{{ path('lieu_new') }}">Ajouter un lieu</a>
    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Rue</th>
                <th>Code Postal</th>
                <th>Ville</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for lieu in lieus %}
            <tr>
                <td>{{ lieu.nom }}</td>
                <td>{{ lieu.rue }}</td>
                <td>{{ lieu.ville.codePostal }}</td>
                <td>{{ lieu.ville.nom }}</td>
                <td>{{ lieu.latitude }}</td>
                <td>{{ lieu.longitude }}</td>
                <td>
                    <a href="{{ path('lieu_show', {'id': lieu.id}) }}" class="btn btn-outline-info">Détails</a>
                    <a href="{{ path('lieu_edit', {'id': lieu.id}) }}" class="btn btn-outline-info">Modifier</a>
                    <a href="{{ path('lieu_delete', {'id': lieu.id}) }}" class="btn btn-outline-danger">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun lieu trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('lieu_new') }}" class="btn btn-outline-info">Ajouter un lieu</a>

{% endblock %}
